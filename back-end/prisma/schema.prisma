datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           Int      @id @default(autoincrement())
  photo        String?
  name         String
  email        String   @unique
  password     String 
  spent        Decimal  @db.Decimal(10,2)
  phone        String
  address      String?
  registerDate DateTime @map("register_date")

  @@map("users") 
}

model Pharmacy {
  id      Int    @id @default(autoincrement())
  name    String
  address String
  city    String
  phone   String
  rating  Int     @default(0)

  @@map("pharmacies") 
}

model Product {
  id        Int             @id @default(autoincrement())
  photo     String?
  name      String
  suppliers String?
  stock     Int             @default(0)
  price     Decimal         @db.Decimal(10,2)
  category  String

  reviews   ProductReview[]

  @@map("products") 
}

model AppReview {
  id          Int    @id @default(autoincrement())
  name        String
  photo       String
  testimonial String

  @@map("app_reviews") 
}

model ProductReview {
  id        Int      @id @default(autoincrement())
  photo     String
  name      String
  date      DateTime
  text      String
  rating    Int
  product   Product  @relation(fields: [productId], references: [id])
  productId Int

  @@map("product_reviews")
}


model Supplier {
  id        Int      @id @default(autoincrement())
  name      String
  address   String?
  suppliers String?  
  date      DateTime  @map("date")
  amount    Decimal   @db.Decimal(10,2)
  status    String

  @@map("suppliers") 
}