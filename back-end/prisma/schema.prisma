datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           Int      @id @default(autoincrement())
  photo        String?
  name         String
  email        String   @unique
  spent        Decimal  @db.Decimal(10,2)
  phone        String
  address      String?
  registerDate DateTime @map("register_date")

  @@map("users") 
}

model Pharmacy {
  id      Int    @id @default(autoincrement())
  name    String
  address String
  city    String
  phone   String
  rating  Int     @default(0)

  @@map("pharmacies") 
}

model Product {
  id        Int     @id @default(autoincrement())
  photo     String?
  name      String
  suppliers String?
  stock     Int     @default(0)
  price     Decimal @db.Decimal(10,2)
  category  String

  @@map("products") 
}

model Review {
  id          Int    @id @default(autoincrement())
  name        String
  testimonial String

  @@map("reviews") 
}

model Supplier {
  id        Int      @id @default(autoincrement())
  name      String
  address   String?
  suppliers String?  
  date      DateTime  @map("date")
  amount    Decimal   @db.Decimal(10,2)
  status    String

  @@map("suppliers") 
}